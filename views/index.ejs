<!DOCTYPE html>
<html>

<head>
  <title>Termékek</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.rtl.min.css"
    integrity="sha384-CfCrinSRH2IR6a4e6fy2q6ioOX7O6Mtm1L9vRvFZ1trBncWmMePhzvafv7oIcWiW" crossorigin="anonymous">
</head>

<body>
  <div class="container">
    <h1>Válassz egy terméket</h1>
    <div class="d-flex flex-wrap gap-3">
      <% products.forEach(p=> { %>
        <form action="/order" method="get" class="card" style="width: 18rem;">
          <img src="<%= p.image %>" class="card-img-top" alt="<%= p.name %>">
          <div class="card-body">
            <h5 class="card-title">
              <%= p.name %>
            </h5>
            <p class="card-text">
              <%= p.price %> Ft
            </p>
            <input type="hidden" name="productId" value="<%= p.id %>" />
            <button type="submit" class="btn btn-primary">Megrendelem</button>
          </div>
        </form>
        <% }) %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5n9nH9z8j9m5W8j5J+OWQ6pq9vJzzW5n9i5N5E9"
    crossorigin="anonymous"></script>
</body>

</html>
